<%= form_for(@task) do |f| %>
    <div class="form-group shrink">
        <%= f.label :task %>
        <%= f.text_field :task %>
    </div>
    <div class="form-group shrink">
        <%= f.label :description %>
        <%= f.text_area :description %>
    </div>
    <div class="shrink">
        <%= f.submit %>
    </div>
<% end %>
